<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3238"
    tools:context="com.quaere.noida.busmanagementsystem.NewUserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:id="@+id/edt_fullname"
            android:hint="Full Name"
            android:padding="10dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:id="@+id/edt_mobileno"
            android:hint="Mobileno"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:password="true"
            android:inputType="textPassword"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:id="@+id/edt_register_password"
            android:hint="Password"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_register"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:background="#EA4C89"
            android:textColor="#fff"
            android:text="Register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="18dp"
            android:id="@+id/tv_alraedylogin"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Already registered! Login Me."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
