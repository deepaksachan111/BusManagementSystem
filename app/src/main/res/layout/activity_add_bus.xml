<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quaere.noida.busmanagementsystem.AddBusActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/line1..1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:padding="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@android:drawable/ic_dialog_dialer" />

        <TextView
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text=" BUS Route"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1..1"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#25AE90"
                android:gravity="center"
                android:padding="5dp"
                android:text="ADD BUS"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@id/linear2"
        android:padding="10dp"
        android:background="#FFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Bus No."
            android:textSize="16dp" />
        <EditText
            android:id="@+id/edt_bus_no"
            android:padding="5dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Source"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/edt_source"
            android:padding="5dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Destination"
        android:textSize="16dp" />
        <EditText
            android:id="@+id/edt_destination"
            android:padding="5dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Arrival"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/edt_arrival"
            android:padding="5dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Departure"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/edt_departure"
            android:padding="5dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#fff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Fare"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/edt_fare"
            android:padding="5dp"
            android:background="@drawable/edt_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


            
            <Button
                 android:id="@+id/btn_addbus"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_background"
                android:layout_alignParentBottom="true"
                android:textColor="#FFF"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ADD BUS"
                android:textSize="16dp" />
     </LinearLayout>
    </ScrollView>






    </RelativeLayout>


